<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/property_list_row_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/property_list_row_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="3dip" >

            <ImageView
                android:id="@+id/property_row_imageview"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/property_row_spinner"
                android:layout_width="50dip"
                android:layout_height="50dip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/property_text_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/property_list_row_image_layout" >

            <TextView
                android:id="@+id/property_list_row_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Title"
                android:textColor="@color/black_color"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/property_list_row_place"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/property_list_row_title"
                android:text="Place"
                android:textColor="@color/black_color"
                android:textSize="12dip" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dip"
            android:layout_below="@+id/property_list_row_container"
            android:background="@color/black_color" />
    </RelativeLayout>

</RelativeLayout>