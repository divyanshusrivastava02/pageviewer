<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >

    <AbsoluteLayout
        android:id="@+id/kinki_map_absoluteLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/g_kinki_selected_320by480" >

        <Button
            android:id="@+id/btn_back_Kinki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="14dp"
            android:layout_y="13dp"
            android:background="@drawable/back_btn_320by480"
            android:text="@string/back_jap" />

        <Button
            android:id="@+id/btn_shiga_ken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn_320by480"
            android:text="1"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_hyogo_ken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn_320by480"
            android:text="2"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_kyoto_fu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn_320by480"
            android:text="4"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_osaka_fu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn_320by480"
            android:text="5"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_nara_ken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn_320by480"
            android:text="6"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_wakayama_ken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn_320by480"
            android:text="3"
            android:visibility="invisible" />
    </AbsoluteLayout>

</RelativeLayout>