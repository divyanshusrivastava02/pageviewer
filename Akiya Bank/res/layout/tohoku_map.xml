<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >

    <AbsoluteLayout
        android:id="@+id/tohoku_map_absoluteLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/b_tohoku_selected__320by480" >

        <Button
            android:id="@+id/btn_back_Tohoku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="14dp"
            android:layout_y="13dp"
            android:background="@drawable/back_btn_320by480"
            android:text="@string/back_jap" />

        <Button
            android:id="@+id/btn_Fukushima_Ken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn_320by480"
            android:text="6"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_Aomori_ken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn_320by480"
            android:text="1"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_Yamagata_Ken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn_320by480"
            android:text="4"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_Miyagi_Ken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn_320by480"
            android:text="5"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_Akita_Ken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn_320by480"
            android:text="2"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_Iwate_Ken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn_320by480"
            android:text="3"
            android:visibility="invisible" />
    </AbsoluteLayout>

</RelativeLayout>