<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >

    <AbsoluteLayout
        android:id="@+id/shikoku_map_absoluteLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/i_shikoku_selected_320by480" >

        <Button
            android:id="@+id/btn_back_Shikoku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="14dp"
            android:layout_y="13dp"
            android:background="@drawable/back_btn_320by480"
            android:text="@string/back_jap" />

        <Button
            android:id="@+id/btn_kagawa_ken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn_320by480"
            android:text="2"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_ehime_ken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn_320by480"
            android:text="3"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_tokushima_ken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn_320by480"
            android:text="4"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_kochi_ken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn_320by480"
            android:text="1"
            android:visibility="invisible" />
    </AbsoluteLayout>

</RelativeLayout>